        <script>
        function validateForm() {
          var x = document.forms["booking_form"]["origin"].value;
          var y = document.forms["booking_form"]["dest"].value;
        //   console.log(x);
        //   console.log(y);
          if (x == y) {
            alert("Orgin and Destination need to be different");
            return false;
          }
        }
        </script>
</head>
